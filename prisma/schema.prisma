generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  username   String
  mail       String    @unique
  phone      Int?      @unique
  password   String
  comments   Comment[]
  likedPosts Like[]
  posts      Post[]
}

model Post {
  id         Int       @id @default(autoincrement())
  comment    String
  imageCount Int
  createAt   DateTime  @default(now())
  comments   Comment[]
  images     Image[]
  likes      Like[]

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Image {
  id     Int   @id @default(autoincrement())
  orderNumber Int
  bytes  Bytes
  postId Int
  post   Post  @relation(fields: [postId], references: [id])
}

model Comment {
  id       Int      @id @default(autoincrement())
  text     String
  createAt DateTime @default(now())
  userId   Int
  postId   Int
  post     Post     @relation(fields: [postId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

model Like {
  id       Int      @id @default(autoincrement())
  createAt DateTime @default(now())
  userId   Int
  postId   Int
  post     Post     @relation(fields: [postId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}
